---
import Layout from './Layout.astro';
import { Calendar, Clock, Tag, ArrowLeft } from 'lucide-react';

interface Props {
  title: string;
  description: string;
  publishDate: Date;
  tags?: string[];
  readingTime?: number;
}

const { title, description, publishDate, tags, readingTime } = Astro.props;

// Format date
const formattedDate = publishDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Layout 
  title={title} 
  description={description}
  type="article"
  publishDate={publishDate}
  tags={tags}
>
  <article class="container mx-auto px-4 py-16">
    <div class="mx-auto max-w-4xl">
      <!-- Back to Blog -->
      <div class="mb-8">
        <a
          href="/blog"
          class="inline-flex items-center gap-2 font-medium text-primary-600 transition-colors hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
        >
          <ArrowLeft />
          Back to Blog
        </a>
      </div>

      <!-- Header -->
      <header class="mb-12">
        <div class="mb-8 text-center">
          <!-- Meta info -->
          <div class="mb-6 flex flex-wrap items-center justify-center gap-4 text-sm text-gray-600 dark:text-gray-400">
            <div class="flex items-center gap-2">
              <Calendar />
              <time datetime={publishDate.toISOString()}>
                {formattedDate}
              </time>
            </div>
            {
              readingTime && (
                <div class="flex items-center gap-2">
                  <Clock />
                  <span>{readingTime} min read</span>
                </div>
              )
            }
          </div>

          <!-- Title -->
          <h1 class="mb-6 text-4xl font-bold leading-tight text-gray-900 dark:text-white md:text-5xl">
            {title}
          </h1>

          <!-- Description -->
          <p class="mx-auto max-w-3xl text-xl leading-relaxed text-gray-600 dark:text-gray-300">
            {description}
          </p>

          <!-- Tags -->
          {
            tags && tags.length > 0 && (
              <div class="mt-6 flex flex-wrap items-center justify-center gap-2">
                <Tag color="orange" />
                {tags.map(tag => (
                  <span class="inline-flex items-center rounded-full bg-primary-100 px-3 py-1 text-xs font-medium text-primary-700 dark:bg-primary-900/30 dark:text-primary-300">
                    {tag}
                  </span>
                ))}
              </div>
            )
          }
        </div>
      </header>

      <!-- Content -->
      <div class="prose max-w-none">
        <slot />
      </div>

      <!-- Footer -->
      <footer class="mt-16 border-t border-gray-200 pt-8 dark:border-gray-700">
        <div class="flex items-center justify-between">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 font-medium text-primary-600 transition-colors hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
          >
            <ArrowLeft />
            Back to Blog
          </a>
        </div>
      </footer>
    </div>
  </article>
</Layout>

<style is:global>
  /* Base prose styling - reset and set foundation */
  .prose {
    font-feature-settings:
      'kern' 1,
      'liga' 1,
      'calt' 1;
    line-height: 1.75;
    color: theme('colors.gray.600');
    font-family:
      ui-sans-serif,
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      'Helvetica Neue',
      Arial,
      'Noto Sans',
      sans-serif;
  }

  .prose * {
    margin: 0;
    padding: 0;
  }

  .dark .prose {
    color: theme('colors.gray.300');
  }

  /* Headings */
  .prose h1 {
    @apply mb-8 mt-0 text-4xl font-bold leading-tight text-gray-900 dark:text-white;
  }

  .prose h2 {
    @apply mb-6 mt-16 border-b border-gray-200 pb-3 text-3xl font-semibold text-gray-900 dark:border-gray-700 dark:text-white;
    scroll-margin-top: 6rem;
  }

  .prose h3 {
    @apply mb-4 mt-12 text-2xl font-semibold text-gray-900 dark:text-white;
    scroll-margin-top: 6rem;
  }

  .prose h4 {
    @apply mb-3 mt-8 text-xl font-semibold text-gray-900 dark:text-white;
    scroll-margin-top: 6rem;
  }

  .prose h5 {
    @apply mb-2 mt-6 text-lg font-semibold text-gray-900 dark:text-white;
    scroll-margin-top: 6rem;
  }

  .prose h6 {
    @apply mb-2 mt-6 text-base font-semibold text-gray-900 dark:text-white;
    scroll-margin-top: 6rem;
  }

  /* Paragraphs */
  .prose p {
    @apply mb-6 leading-relaxed text-gray-600 dark:text-gray-300;
  }

  /* Links */
  .prose a {
    @apply font-medium text-primary-600 underline decoration-primary-300 underline-offset-2 transition-colors hover:text-primary-700 hover:decoration-primary-500 dark:text-primary-400 dark:decoration-primary-600 dark:hover:text-primary-300 dark:hover:decoration-primary-400;
  }

  /* Lists */
  .prose ul {
    @apply mb-6 list-inside list-disc space-y-2 text-gray-600 dark:text-gray-300;
  }

  .prose ol {
    @apply mb-6 list-inside list-decimal space-y-2 text-gray-600 dark:text-gray-300;
  }

  .prose li {
    @apply mb-2 pl-2;
  }

  .prose li::marker {
    @apply text-primary-500 dark:text-primary-400;
  }

  .prose ul ul,
  .prose ol ol,
  .prose ul ol,
  .prose ol ul {
    @apply mb-0 ml-6 mt-3;
  }

  .prose li p {
    @apply mb-3;
  }

  /* Text styling */
  .prose strong,
  .prose b {
    @apply font-semibold text-gray-900 dark:text-white;
  }

  .prose em,
  .prose i {
    @apply italic;
  }

  .prose mark {
    @apply rounded bg-accent-200 px-1 py-0.5 dark:bg-accent-800;
  }

  .prose del {
    @apply text-gray-500 line-through dark:text-gray-400;
  }

  .prose ins {
    @apply rounded bg-green-100 px-1 underline no-underline decoration-green-500 dark:bg-green-900/30 dark:decoration-green-400;
  }

  .prose small {
    @apply text-sm text-gray-500 dark:text-gray-400;
  }

  .prose sub {
    @apply align-sub text-xs;
  }

  .prose sup {
    @apply align-super text-xs;
  }

  /* Blockquotes */
  .prose blockquote {
    @apply my-8 rounded-r-lg border-l-4 border-primary-300 bg-gray-50 py-4 pl-6 dark:border-primary-600 dark:bg-gray-800/50;
  }

  .prose blockquote p {
    @apply mb-0 font-medium italic text-gray-700 dark:text-gray-200;
  }

  .prose blockquote cite {
    @apply mt-2 block text-sm not-italic text-gray-500 dark:text-gray-400;
  }

  .prose blockquote cite::before {
    content: 'â€” ';
  }

  /* Code */
  .prose code {
    @apply rounded bg-gray-100 px-2 py-1 font-mono text-sm text-primary-600 dark:bg-gray-800 dark:text-primary-400;
    font-size: 0.875em;
  }

  .prose pre {
    @apply my-8 overflow-x-auto rounded-lg border border-gray-200 bg-gray-900 p-6 text-gray-100 dark:border-gray-700 dark:bg-gray-950;
    font-size: 0.875em;
    line-height: 1.7;
  }

  .prose pre code {
    @apply bg-transparent p-0 text-sm text-gray-100;
  }

  .prose kbd {
    @apply rounded border border-gray-300 bg-gray-100 px-2 py-1 font-mono text-sm shadow-sm dark:border-gray-600 dark:bg-gray-800;
  }

  /* Images and media */
  .prose img {
    @apply mx-auto my-8 h-auto max-w-full rounded-lg border border-gray-200 shadow-lg dark:border-gray-700;
  }

  .prose figure {
    @apply my-8;
  }

  .prose figcaption {
    @apply mt-3 text-center text-sm italic text-gray-500 dark:text-gray-400;
  }

  .prose video {
    @apply mx-auto my-8 h-auto max-w-full rounded-lg shadow-lg;
  }

  /* Tables */
  .prose table {
    @apply my-8 w-full border-collapse overflow-hidden rounded-lg border border-gray-300 shadow-sm dark:border-gray-700;
  }

  .prose thead {
    @apply bg-gray-100 dark:bg-gray-800;
  }

  .prose th {
    @apply border-b border-gray-300 px-6 py-4 text-left font-semibold text-gray-900 dark:border-gray-700 dark:text-white;
  }

  .prose td {
    @apply border-b border-gray-200 px-6 py-4 text-gray-600 dark:border-gray-700 dark:text-gray-300;
  }

  .prose tbody tr:hover {
    @apply bg-gray-50 dark:bg-gray-800/50;
  }

  .prose tbody tr:last-child td {
    @apply border-b-0;
  }

  /* Horizontal rule */
  .prose hr {
    @apply my-12 border-0 border-t border-gray-300 dark:border-gray-600;
  }

  /* Definition lists */
  .prose dl {
    @apply mb-6;
  }

  .prose dt {
    @apply mb-2 mt-4 font-semibold text-gray-900 dark:text-white;
  }

  .prose dd {
    @apply mb-4 ml-6 text-gray-600 dark:text-gray-300;
  }

  /* Details and summary */
  .prose details {
    @apply mb-6 rounded-lg border border-gray-200 p-4 dark:border-gray-700;
  }

  .prose summary {
    @apply cursor-pointer font-semibold text-gray-900 transition-colors hover:text-primary-600 dark:text-white dark:hover:text-primary-400;
  }

  .prose details[open] summary {
    @apply mb-4 border-b border-gray-200 pb-2 dark:border-gray-700;
  }

  /* Abbreviations */
  .prose abbr {
    @apply cursor-help border-b border-dotted border-gray-400 dark:border-gray-500;
  }

  /* Address */
  .prose address {
    @apply my-6 rounded-lg border-l-4 border-secondary-300 bg-gray-50 p-4 not-italic dark:border-secondary-600 dark:bg-gray-800/50;
  }

  /* First paragraph special styling */
  .prose > p:first-of-type {
    @apply text-lg text-gray-700 dark:text-gray-200;
  }

  /* Prevent orphan headings */
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    break-after: avoid;
  }
</style>
